    <h4>post요청</h4>
    <form action="/postForm" method="post">
        <!-- action이 화면을 실행해주는 것! -->
        <input type="text" placeholder="id" name="id" >
        <input type="password" placeholder="pw" name="pw" pattern="^([a-z0-9]){8,12}"><br>
        <input type="email"><br>
        <input type="radio"><br>
        <input type="checkbox"><br>
        <input type="tel"><br>
        <input type="number"><br>
        <input type="date"><br>
        <input type="time"><br>
        <input type="color"><br>
        <button type="submit">제출하기</button>
        
    </form>

    
</body>
</html>